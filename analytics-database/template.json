{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environmentName": {
            "type": "String",
            "defaultValue": "staging"
        },
        "servers_db_createMode": {
            "defaultValue": "Default",
            "type": "SecureString"
        },
        "servers_db_name": {
            "defaultValue": "school_experience_perf",
            "type": "String"
        },
        "databases_postgres_name": {
            "defaultValue": "postgres",
            "type": "String"
        },
        "databases_azure_sys_name": {
            "defaultValue": "azure_sys",
            "type": "String"
        },
        "databases_azure_maintenance_name": {
            "defaultValue": "azure_maintenance",
            "type": "String"
        },
        "databases_school_experience_name": {
            "defaultValue": "",
            "type": "String"
        },
        "postgresAdminLoginName": {
            "defaultValue": "adminuser",
            "type": "String"
        },
        "postgresAdminPassword": {
            "defaultValue": "7yDP@kJ7qwyy2y8Yip!v",
            "type": "SecureString"
        },
        "_artifactsLocation": {
            "type": "string",
            "metadata": {
                "description": "The base URI where artifacts required by this template are located. When the template is deployed using the accompanying scripts, a private location in the subscription will be used and this value will be automatically generated."
            },
            "defaultValue": "https://raw.githubusercontent.com/DFE-Digital/school-experience-devops/feature/1358/perfdb/"
        },
        "_artifactsLocationSasToken": {
            "type": "securestring",
            "metadata": {
                "description": "The sasToken required to access _artifactsLocation.  When the template is deployed using the accompanying scripts, a sasToken will be automatically generated."
            },
            "defaultValue": ""
        },
        "postgresSku": {
            "type": "object",
            "defaultValue": {
                "name": "B_Gen5_1",
                "tier": "Basic",
                "family": "Gen5",
                "capacity": 1
            }
        },
        "postgresStorageProfile": {
            "type": "object",
            "defaultValue": {
                "storageMB": 20000,
                "backupRetentionDays": 0,
                "geoRedundantBackup": "Disabled"
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.DBforPostgreSQL/servers",
            "sku": "[parameters('postgresSku')]",
            "name": "[parameters('servers_db_name')]",
            "apiVersion": "2017-12-01-preview",
            "location": "[resourceGroup().location]",
            "scale": null,
            "properties": {
                "storageProfile": "[parameters('postgresStorageProfile')]",
                "version": "10",
                "sslEnforcement": "Enabled",
                "createMode": "[parameters('servers_db_createMode')]",
                "administratorLogin": "[parameters('postgresAdminLoginName')]",
                "administratorLoginPassword": "[parameters('postgresAdminPassword')]"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.DBforPostgreSQL/servers/databases",
            "name": "[concat(parameters('servers_db_name'), '/', parameters('databases_postgres_name'))]",
            "apiVersion": "2017-12-01-preview",
            "scale": null,
            "properties": {
                "charset": "UTF8",
                "collation": "English_United States.1252"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/servers', parameters('servers_db_name'))]"
            ]
        },
        {
            "type": "Microsoft.DBforPostgreSQL/servers/databases",
            "name": "[concat(parameters('servers_db_name'), '/', parameters('databases_azure_maintenance_name'))]",
            "apiVersion": "2017-12-01-preview",
            "scale": null,
            "properties": {
                "charset": "UTF8",
                "collation": "English_United States.1252"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/servers', parameters('servers_db_name'))]"
            ]
        },
        {
            "type": "Microsoft.DBforPostgreSQL/servers/databases",
            "name": "[concat(parameters('servers_db_name'), '/', parameters('databases_azure_sys_name'))]",
            "apiVersion": "2017-12-01-preview",
            "scale": null,
            "properties": {
                "charset": "UTF8",
                "collation": "English_United States.1252"
            },
            "dependsOn": [
                "[resourceId('Microsoft.DBforPostgreSQL/servers', parameters('servers_db_name'))]"
            ]
        }
    ]
}